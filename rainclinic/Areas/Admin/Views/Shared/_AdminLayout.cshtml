<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Paneli</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>

    
    <div class="d-flex" id="wrapper">
        <div class="border-end bg-white" id="sidebar-wrapper">
            <div class="sidebar-heading border-bottom bg-light">Admin Paneli</div>
            <div class="list-group list-group-flush">
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="@Url.Action("Index", "Home", new { area = "Admin" })">Dashboard</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="@Url.Action("Index", "UserManagement", new { area = "Admin" })">Kullanıcı Yönetimi</a>
                <a class="list-group-item list-group-item-action list-group-item-light p-3" href="@Url.Action("Index", "AppointmentManagement", new { area = "Admin" })">Randevu Yönetimi</a>
              </div>
    </div>
    
   
        <div id="page-content-wrapper" class="w-100">
            <nav class="navbar navbar-expand-lg navbar-light bg-light border-bottom">
                <div class="container-fluid">
                    <span class="navbar-text ms-auto">Hoşgeldiniz, @User.Identity.Name</span>
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline" asp-area="">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-outline-danger ms-3">Çıkış Yap</button>
                    </form>
                </div>
            </nav>
            <div class="container-fluid mt-4">
                @RenderBody()
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.getElementById("sidebarToggle").addEventListener("click", function () {
            document.getElementById("wrapper").classList.toggle("toggled");
        });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
